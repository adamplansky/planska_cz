<% content_for :title do %>Kontakt<% end %>

<section class="contacts">
  <h3>Kontakt</h3>
  <article>
	  <section class="col-sm-6">
      <h4>Zašlete mi zprávu</h4>
      <%= form_for @contact do |f| %>
      <div class="form-group">
         <%= f.label :name, "Vaše jméno:" %>
         <%= f.text_field :name, class: "form-control" %>
       </div>
       <div class="form-group">
          <%= f.label :email, "Váš email:" %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
       
       <div class="form-group">
          <%= f.label :message, "Vaše zpráva:" %>
          <%= f.text_field :message, class: "form-control" %>
        </div>
       
        <%= f.submit "odeslat", class: "btn btn-default" %>
      <% end %>
    
    
    </section>
	  <section class="col-sm-6 contact">
      <h4>Kontaktní informace</h4>
      <div>Máte-li zájem o mé služby či jakýkoli dotaz, neváhejte mne kontaktovat prostřednictvím kontaktního formuláře, či na níže uvedených kontaktech.</div>
      
      <div>
        <ul>
          <li>Slatina 30, 273 26 Slatina, okres Kladno</li>
          <li>+420 606 419 246</li>
          <li><%= mail_to "jitka@planska.cz"%></li>
          <li><%= link_to "www.planska.cz", "http://www.planska.cz/"%></li>
        </ul>
      </div>
    </section>
  </article>
</section>